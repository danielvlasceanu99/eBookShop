@model EBookShop.ViewModels.GetBookViewModel
@{
    ViewData["Title"] = "Get book";
}

<div class="align-items-center"> 
    <div class="col-md-7">
        <h3>Card Info</h3>
        <hr />
        <br />
        <form asp-controller="GetBook" asp-action="GetBook" asp-route-id="@Model.book.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.paymentInfo.CardHolderName">Cardholder Name</label>
                <input asp-for="@Model.paymentInfo.CardHolderName" type="text"
                       placeholder="Enter Cardholder Name" required class="form-control">
                <span asp-validation-for="@Model.paymentInfo.CardHolderName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.paymentInfo.CardNumber">Credit Card Number</label>
                <input asp-for="@Model.paymentInfo.CardNumber" type="tel" inputmode="numeric"
                       pattern="[0-9\s]{13,24}" autocomplete="cc-number" maxlength="24"
                       placeholder="xxxx xxxx xxxx xxxx xxxx" required class="form-control">
                <span asp-validation-for="@Model.paymentInfo.CardNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-7">
                    <label for="expiry-date">Expiration Month/Year</label>
                    <div class="input-group" id="expiry-date">
                        <select asp-for="@Model.paymentInfo.ExpiryMonth" class="form-control col-md-6">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.paymentInfo.ExpiryMonth" class="text-danger"></span>
                        <select asp-for="@Model.paymentInfo.ExpiryYear" class="form-control col-md-6">
                            @for (int i = DateTime.Now.Year; i < DateTime.Now.Year + 10; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.paymentInfo.ExpiryYear" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="@Model.paymentInfo.CVV">CVV</label>
                    <input asp-for="@Model.paymentInfo.CVV" type="number"
                           placeholder="Enter CVV" required class="form-control">
                    <span asp-validation-for="@Model.paymentInfo.CVV" class="text-danger"></span>
                </div>
            </div>
            <br />
            <span>
                <input type="submit" class="btn btn-secondary" value="Pay $@Model.book.Price" />
                <a asp-controller="BookDetails" asp-action="Details" asp-route-id="@Model.book.Id" class="btn btn-secondary">
                    Cancel
                </a>
            </span>
        </form>
    </div>
    <div class="col-md-5">

    </div>
</div>
