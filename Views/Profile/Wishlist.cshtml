@model EBookShop.Areas.Identity.Data.User
@{
    ViewData["Title"] = "Wishlist";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10 d-flex justify-content-md-between align-items-md-start">
        <h4>Your wishlist</h4>
        @if (Model.WishlistList.Count != 0)
        {
            <a class="btn" asp-controller="GetBook" asp-action="AddAllToCart">
                <i class="fas fa-cart-plus"></i>
                Add all to cart
            </a>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-2 mt-3">
        <nav class="navbar bg-light navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Profile" asp-action="Index">Library</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Profile" asp-action="Wishlist">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Profile" asp-action="Cart">Cart</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="col-md-10">
        @foreach (Wishlist book in Model.WishlistList)
        {
            <hr />
            <div class="row d-flex">
                <div class="media p-3 col-md-9">
                    @{string srcBook = "https://drive.google.com/uc?export=view&id=" + book.Book.ImageId; }
                    <img src=@srcBook class="align-self-start mr-3" style="width:75px; height:100px" 
                         alt=@book.Book.Title>
                    <div class="media-body">
                        <a asp-controller="BookDetails" asp-action="Details" asp-route-id="@book.Book.Id"
                           class="text-decoration-none text-dark">
                            <h4 class="d-flex justify-content-md-between align-items-md-start">
                                @book.Book.Title
                                @if (book.Book.Discount != 0)
                                {
                                    <span>
                                        <span class="badge">
                                            <del class="text-danger">$@book.Book.Price</del>
                                            <sup class="text-danger">-@(String.Format("{0:#,##}", book.Book.Discount *100))%</sup>
                                            $@(String.Format("{0:#,##.##}", (float)(1 - book.Book.Discount) * book.Book.Price))
                                        </span>
                                    </span>
                                }
                                else
                                {
                                    <span class="badge">$@book.Book.Price</span>
                                }
                            </h4>
                        </a>
                        <p class="font-weight-bold">Rating: @book.Book.Rating/5</p>
                        @foreach (GenreToBookAssociation g in book.Book.GenreList)
                        {
                            <span class="badge badge-secondary">@g.Genre.GenreName</span>
                        }
                    </div>
                </div>
                <div class="col-md-3 align-self-center">
                    <div class="btn-group btn-block">
                        <a class="btn btn-secondary" asp-controller="GetBook" asp-action="MoveToCart" asp-route-id=@book.Book.Id
                          style="border-right:solid 1px #000000" >Add to cart</a>
                        <a class="btn btn-secondary" asp-controller="GetBook" asp-action="RemoveFromWishlist" asp-route-id=@book.Book.Id
                           style="border-left:solid 1px #000000">Remove</a>
                    </div>
                </div>
            </div>
        }
        <div>
            @if (Model.WishlistList.Count == 0)
            {
            <div class="d-flex justify-content-center">
                <div>
                    <h1 class="display-4 text-muted"> Your wishlist is empty</h1>
                </div>
            </div>
            }
        </div>
    </div>
</div>