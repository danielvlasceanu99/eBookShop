@model EBookShop.Areas.Identity.Data.User
@{
    ViewData["Title"] = "Library";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <h4>Your books</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-2 mt-3">
        <nav class="navbar bg-light navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Profile" asp-action="Index">Library</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Profile" asp-action="Wishlist">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Profile" asp-action="Cart">Cart</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="col-md-10">
        @foreach (BookToUserAssociation book in Model.BookList)
        {
            <hr />
            <div class="row d-flex">
                <div class="media p-3 col-md-9">
                    @{string srcBook = "https://drive.google.com/uc?export=view&id=" + book.Book.ImageId; }
                    <img src=@srcBook class="align-self-start mr-3" style="width:75px; height:100px" alt=@book.Book.Title>
                    <div class="media-body">
                        <a asp-controller="BookDetails" asp-action="Details" asp-route-id="@book.Book.Id" class="text-decoration-none text-dark">
                            <h4>@book.Book.Title</h4>
                        </a>
                        <p class="font-weight-bold">Rating: @book.Book.Rating/5</p>
                        @foreach (GenreToBookAssociation g in book.Book.GenreList)
                        {
                            <span class="badge badge-secondary">@g.Genre.GenreName</span>
                        }
                    </div>
                </div>
                <div class="col-md-3 align-self-center pr-5 pl-5">
                    <div class="dropdown dropleft">
                        <button type="button" class="btn btn-secondary dropdown-toggle btn-lg btn-block" data-toggle="dropdown">
                            Download
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="BookDetails" asp-action="DownloadDocument"
                               asp-route-id=@book.Book.Id asp-route-type="pdf">PDF</a>
                            <a class="dropdown-item" asp-controller="BookDetails" asp-action="DownloadDocument"
                               asp-route-id=@book.Book.Id asp-route-type="epub">EPUB</a>
                            <a class="dropdown-item" asp-controller="BookDetails" asp-action="DownloadDocument"
                               asp-route-id=@book.Book.Id asp-route-type="mobi">MOBI</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div>
            @if (Model.BookList.Count == 0)
            {
                <div class="d-flex justify-content-center">
                    <div>
                        <h1 class="display-4 text-muted"> Your library is empty</h1>
                    </div>
                </div>
            }
        </div>
    </div>
</div>