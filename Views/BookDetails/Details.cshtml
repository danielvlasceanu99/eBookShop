@model EBookShop.ViewModels.BookDetailesViewModel
@{
    ViewData["Title"] = Model.Book.Title;
}

@using Microsoft.AspNetCore.Identity
@using EBookShop.Areas.Identity.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="row">
    <div class="col-md-9">
        <div class="media">
            @{string srcBook = "https://drive.google.com/uc?export=view&id=" + Model.Book.ImageId; }
            <img src=@srcBook class="align-self-start mr-3 mt-3" width="156" height="212" alt=@Model.Book.Title>
            <div class="media-body text-justify">
                <h4 class="d-flex justify-content-md-between align-items-md-start">
                    @Model.Book.Title
                    @if (Model.Book.Discount != 0)
                    {
                        <span class="badge">
                            <del class="text-danger">$@Model.Book.Price</del>
                            <sup class="text-danger">-@(String.Format("{0:#,##}", Model.Book.Discount *100))%</sup>
                            $@(String.Format("{0:#,##.##}", (float)(1 - Model.Book.Discount) * Model.Book.Price))
                        </span>
                    }
                    else
                    {
                        <span class="badge">$@Model.Book.Price</span>
                    }
                </h4>
                <p>by @Model.Book.Author.Name</p>
                <h5 class="font-weight-bold">Description:</h5>
                <div>
                    <em>@Model.Book.Description</em>
                </div>
                <br />
                <br />
                <div>
                    <a href="#info" class="text-decoration-none text-dark font-weight-bold" data-toggle="collapse">More info</a>
                    <div id="info" class="collapse">
                        <div class="font-weight-light">ISBN: @Model.Book.ISBN</div>
                        @if (Model.Book.Rating != 0)
                        {
                            <div class="font-weight-light">
                                Rating: @(String.Format("{0:#,##.##}", (float)(Model.Book.Rating)))/5
                                <i class="fas fa-book-open" style="color:#111111"></i>
                            </div>
                        }
                        else
                        {
                            <div class="font-weight-light">
                                Rating: 0/5
                                <i class="fas fa-book-open" style="color:#111111"></i>
                            </div>
                        }
                        <div class="font-weight-light">Original language: @Model.Book.OriginalLanguage</div>
                    </div>
                </div>
                <div>
                    <div>
                        <hr />
                        <h5 class="font-weight-bold">Preview</h5>
                        @{string srcPreview = "https://drive.google.com/file/d/" + Model.Book.PreviewId + "/preview"; }
                        <embed frameborder="1" scrolling="no" width="520" height="650" src=@srcPreview />
                    </div>
                </div>
                <div>
                    <hr />
                    <h5>
                        @Model.Book.ReviewList.Count Reviews
                        @if (@Model.Book.ReviewList.Count == 0)
                        {
                            <small>Be the first to review this book</small>
                        }
                    </h5>
                    <span class="font-weight-bolder">
                        <h5 style="display:inline">Rating:</h5>
                        <i class="fas fa-book-open" style="color:#808080"></i>
                        <i class="fas fa-book-open" style="color:#808080"></i>
                        <i class="fas fa-book-open" style="color:#808080"></i>
                        <i class="fas fa-book-open" style="color:#808080"></i>
                        <i class="fas fa-book-open" style="color:#808080"></i>
                    </span>
                    <form asp-controller="BookDetails" asp-action="Details" method="post">
                        <input type="hidden" asp-for=@Model.Review.BookID value="@Model.Book.Id" />
                        <input type="hidden" asp-for=@Model.Review.Rating value="0" id="rating"/>
                        <textarea asp-for="@Model.Review.Text" id="text" rows="4" cols="90" style="resize:none" placeholder="Write a review about @Model.Book.Title..."></textarea>
                        <div class="d-flex justify-content-end">
                            <input id="submit" type="submit" value="Post review" class="btn btn-secondary"/>
                        </div>
                    </form>
                </div>
                <div>
                    <br />
                    <hr />
                    @foreach (Review review in Model.Book.ReviewList)
                    {
                        <div class="media">
                            @{string srcUser = "https://drive.google.com/uc?export=view&id=" + "1qT1rVtWGshdNr2ZhSQgSoaT-6xSYodHz"; }
                            <img src=@srcUser class="align-self-start mr-3" style="width:60px; height:60px">
                            <div class="media-body">
                                <h5>@review.User.FirstName @review.User.LastName <small>(@review.Rating/5)</small></h5>
                                <p>@review.Text</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div>
            @if (Model.HasBook)
            {
                <div class="dropdown">
                    <button type="button" class="btn btn-secondary dropdown-toggle btn-lg btn-block" data-toggle="dropdown">
                        Download
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="BookDetails" asp-action="DownloadDocument"
                           asp-route-id=@Model.Book.Id asp-route-type="pdf">PDF</a>
                        <a class="dropdown-item" asp-controller="BookDetails" asp-action="DownloadDocument"
                           asp-route-id=@Model.Book.Id asp-route-type="epub">EPUB</a>
                        <a class="dropdown-item" asp-controller="BookDetails" asp-action="DownloadDocument"
                           asp-route-id=@Model.Book.Id asp-route-type="mobi">MOBI</a>
                    </div>
                </div>
            }
            else
            {
                <div class="btn-group btn-block">
                    <a asp-controller="Getbook" asp-action="AddBookToWishlist" asp-route-id="@Model.Book.Id" 
                       class="btn btn-secondary" style="border-right:solid 1px #000000" id="adWishlist">
                        Add to Wishlist
                    </a>
                    <a asp-controller="Getbook" asp-action="AddBookToCart" asp-route-id="@Model.Book.Id"
                       class="btn btn-secondary" style="border-left:solid 1px #000000" id="adCart">
                        Add to cart
                    </a>
                </div>
            }
            <hr />
        </div>
        <h5>Genres</h5>
        @foreach (GenreToBookAssociation g in Model.Book.GenreList)
        {
            <span class="badge badge-secondary">@g.Genre.GenreName</span>
        }
        <br />
        <hr />
        <p class="text-uppercase">About @Model.Book.Author.Name</p>

        <div class="ebs-author-card text-justify">
            @{string srcAuthor = "https://drive.google.com/uc?export=view&id=" + @Model.Book.Author.ImageId; }
            <img src=@srcAuthor class="mx-auto d-block" style="width:125px; height:150px">
            <div>
                <h5>
                    <a asp-controller="AuthorDetails" asp-action="Details" asp-route-id="@Model.Book.Author.Id" class="text-decoration-none text-dark">
                        @Model.Book.Author.Name
                    </a>
                </h5>
                <em class="small">@Model.Book.Author.ShortDesctiption</em>
            </div>
        </div>
    </div>
</div>

@section BookDetailsScript{
    <script>
    document.addEventListener("DOMContentLoaded", () => {
        if ("@UserManager.GetUserId(User)" !== "") {
            let tArea = document.getElementById("text");
            let subButton = document.getElementById("submit")
            subButton.disabled = true;
            tArea.oninput = () => {
                if (tArea.value === "") {
                    subButton.disabled = true;
                }
                else {
                    subButton.disabled = false;
                }
            }
        }
        if ("@Model.InWishlist" == "True") {
            let btnWishlist = document.getElementById("adWishlist");
            btnWishlist.disabled = true;
            btnWishlist.classList.add("disabled")
        }
        if ("@Model.InCart" == "True") {
            let btnWishlist = document.getElementById("adCart");
            btnWishlist.disabled = true;
            btnWishlist.classList.add("disabled")
        }

        let icons = document.querySelectorAll("i");
        let rating = document.getElementById("rating");

        icons[0].onmouseover  = () => {
            icons[0].style = "color:#333333"
        }
        icons[1].onmouseover  = () => {
            icons[0].style = "color:#333333"
            icons[1].style = "color:#333333"
        }
        icons[2].onmouseover  = () => {
            icons[0].style = "color:#333333"
            icons[1].style = "color:#333333"
            icons[2].style = "color:#333333"
        }
        icons[3].onmouseover  = () => {
            icons[0].style = "color:#333333"
            icons[1].style = "color:#333333"
            icons[2].style = "color:#333333"
            icons[3].style = "color:#333333"
        }
        icons[4].onmouseover  = () => {
            icons[0].style = "color:#333333"
            icons[1].style = "color:#333333"
            icons[2].style = "color:#333333"
            icons[3].style = "color:#333333"
            icons[4].style = "color:#333333"
        }

        for (var i = 0; i < 5; i++) {
            icons[i].onmouseleave = () => {
                if (rating.value != 0) {
                    for (let j = 0; j < rating.value; j++) {
                        icons[j].style = "color:#222222"
                    }
                    for (let j = rating.value; j < 5; j++) {
                        icons[j].style = "color:#808080"
                    }
                }
                else {
                    for (let j = 0; j < 5; j++) {
                        icons[j].style = "color:#808080"
                    }
                }
            }
        }

        icons[0].onclick = () => { rating.value = 1}
        icons[1].onclick = () => { rating.value = 2}
        icons[2].onclick = () => { rating.value = 3}
        icons[3].onclick = () => { rating.value = 4}
        icons[4].onclick = () => { rating.value = 5}

    })
    </script>
}