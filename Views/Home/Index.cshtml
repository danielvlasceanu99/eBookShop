@model EBookShop.ViewModels.BookListViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-md-left">
    <h1 class="display-4">Books</h1>
</div>

<form asp-controller="Home" asp-action="Index" method="get">
    <div class="input-group">
        <select asp-for="BookGenre" asp-items="Model.Genres" class="form-control col-md-3">
            <option value="">Genre: All</option>
        </select>
        <input type="text" name="SearchString" class="form-control col-md-8" placeholder="Title:" />
        <input type="submit" value="Search" class="btn btn-secondary col-md-1" />
    </div>
</form>

<div>
    @for (int i = 0; i < Model.Books.Count; i++)
    {
        <div class="media p-3">
            @{string src = "https://drive.google.com/uc?export=view&id=" + @Model.Books[i].ImageId; }
            <img src=@src class="align-self-center mr-3" width="115" height="160" alt=@Model.Books[i].Title>
            <div class="media-body">
                <h4 class="d-flex justify-content-md-between align-items-md-start">
                    <a asp-controller="BookDetails" asp-action="Details" asp-route-id="@Model.Books[i].Id" class="text-decoration-none text-dark">
                        @Model.Books[i].Title
                    </a>
                    <span class="badge">$@Model.Books[i].Price</span>
                </h4>
                <small>ISBN: @Model.Books[i].ISBN</small>
                <p>by <a asp-controller="AuthorDetails" asp-action="Details" asp-route-id="@Model.Books[i].Author.Id" class="text-decoration-none text-dark">
                        @Model.Books[i].Author.Name
                    </a></p>
                <p class="font-weight-bold">Goodreads rating: @Model.Books[i].Rating/5</p>
                @foreach (GenreToBookAssociation g in Model.Books[i].GenreList)
                {
                    <span class="badge badge-secondary">@g.Genre.GenreName</span>
                }
            </div>
        </div>
    }
</div>